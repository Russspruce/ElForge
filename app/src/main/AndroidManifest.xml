<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.epicodus.andrewrusso.elforge">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.MainActivity" />
        <activity android:name=".ui.CreateAccountActivity" />
        <activity android:name=".ui.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.SearchResultsActivity">
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="com.epicodus.andrewrusso.elforge.ui.MainActivity">
        </meta-data>
        </activity>
        <activity android:name=".ui.AboutActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.epicodus.andrewrusso.elforge.ui.MainActivity">
            </meta-data>
        </activity>
        <activity android:name=".ui.GameDetailActivity" />
        <activity android:name=".ui.QueuedGameListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.epicodus.andrewrusso.elforge.ui.MainActivity">
            </meta-data>
        </activity>
        <activity android:name=".ui.Test"></activity>
    </application>

</manifest>